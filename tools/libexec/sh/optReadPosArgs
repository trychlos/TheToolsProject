# Synopsis:
#
#   This function initialize the 'ttp_args_pos' array with the positional 
#	arguments found in the command-line
#
# (I): 1. -
#
# (O): variable 'ttp_args_pos' is set
#
# pwi 2013- 6- 3 creation
# pwi 2013- 7-15 review options dynamic computing
# pwi 2017- 6-21 publish the release at last
# pwi 2021-12-28 improve verbose execution

function optReadPosArgs
{
	#set -x
	typeset -i _ret=0
	typeset -i _ia=1
	typeset -i _pos=0

	while [ ${_ia} -le ${#ttp_args_arga[@]} ]; do
		if [ "${ttp_usedargs[${_ia}]}" != "yes" ]; then
			typeset _val="${ttp_args_arga[${_ia}]}"
			ttp_args_pos[${_pos}]="${_val}"
			ttp_usedargs[${_ia}]="yes"
			let _pos+=1
		fi
		let _ia+=1
	done

	return ${_ret}
}
