# Synopsis:
#
#   Set all options with their default values if they have not been set
#	in the command-line
#
# (I): -
#
# (O): -
#
# pwi 2013- 6- 7 creation
# pwi 2013- 7-15 review options dynamic computing
# pwi 2017- 6-21 publish the release at last 

function optSetOptionDefaults
{
	typeset -i _opt=0

	while [ ${_opt} -lt ${#ttp_optargs_option[@]} ]; do
		typeset _name="${ttp_optargs_option[${_opt}]}"
		typeset _set="$(echo $(eval echo '${opt_'${_name}'_set}'))"
		if [ "${_set}" = "no" ]; then
			typeset _def="$(echo $(eval echo '${opt_'${_name}'_def}'))"
			if [ ! -z "${_def}" ]; then
				eval $(echo "opt_"${_name}"=${_def}")
			fi
		fi
		let _opt+=1
	done
}
