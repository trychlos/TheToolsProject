# Synopsis:
#
#   Save the command-line arguments under a normalized form,
#   both as a string 'ttp_args_args' and as an array 'ttp_args_arga' where
#   arguments are indexed from 1.
#
# (I): 1. array of command-line arguments, indexed from 1 to $#
#
# (O): variables are set as:
#
#		ttp_args_args 	a single string which contains provided command-line arguments
#		ttp_args_arga 	an array which contains provided command-line arguments
#		ttp_args_argc 	the count of provided command-line arguments
#
# pwi 2013- 6-11 creation
# pwi 2017- 6-21 publish the release at last 
# pwi 2025- 2- 7 code optimization

function optSaveArgsAppend
{
	typeset -i _idx=${1}
	typeset _arg="${2}"
	
	[ -z "${ttp_args}" ] || ttp_args="${ttp_args} "
	ttp_args_args="${ttp_args}${_arg}"
	ttp_args_arga[${_idx}]="${_arg}"
}

function optSaveArgs
{
	typeset _endofopt="no"
	typeset -i _ia=1
	typeset -i _ret=0
	
	while [ ${_ia} -le $# ]; do
		typeset _arg="$(echo $(eval echo '${'${_ia}'}'))"

		if [ "${_endofopt}" = "yes" ]; then
			optSaveArgsAppend ${_ia} "${_arg}"

		elif [ "${_arg}" = "--" ]; then
			_endofopt="yes"
			optSaveArgsAppend ${_ia} "${_arg}"
			# next will be arguments to pass to someone else

		else
			# make canonical option names have two hyphens
			case ${_arg} in
				--*)
					;;
				-*)
					_arg="-${_arg}"
					;;
			esac
			optSaveArgsAppend ${_ia} "${_arg}"
	fi

		let _ia+=1
	done

	ttp_args_argc=$#

	return ${_ret}
}
